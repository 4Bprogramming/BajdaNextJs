generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model Project {
  id      Int      @id @default(autoincrement())
  place   String   
  title   String
  area    Int
  bathrooms Int
  description String
  garage   Int
  images   Image[]
  rooms    Int
  type     String
  year     Int
  
}

model Image {
  id        Int      @id @default(autoincrement())
  url       String
  projectId Int
  main      Boolean
  cloudinaryID String
  project   Project  @relation(fields: [projectId], references: [id])
}